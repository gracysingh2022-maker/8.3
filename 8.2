import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;
import java.time.LocalDate;

public class AttendanceServlet extends HttpServlet {

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        String name = request.getParameter("studentName");
        String roll = request.getParameter("rollNo");
        String status = request.getParameter("status");
        LocalDate date = LocalDate.now();

        try {
            // Load driver and connect to database
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection con = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/attendance_portal", "root", "your_password"
            );

            // Insert attendance record
            PreparedStatement ps = con.prepareStatement(
                "INSERT INTO attendance(student_name, roll_no, status, date) VALUES (?, ?, ?, ?)"
            );
            ps.setString(1, name);
            ps.setString(2, roll);
            ps.setString(3, status);
            ps.setDate(4, java.sql.Date.valueOf(date));

            int rows = ps.executeUpdate();

            // Response message
            if (rows > 0) {
                out.println("<html><body>");
                out.println("<h2>Attendance Recorded Successfully!</h2>");
                out.println("<p><b>Student:</b> " + name + "<br>");
                out.println("<b>Roll No:</b> " + roll + "<br>");
                out.println("<b>Status:</b> " + status + "<br>");
                out.println("<b>Date:</b> " + date + "</p>");
                out.println("</body></html>");
            } else {
                out.println("<h3>Failed to record attendance.</h3>");
            }

            con.close();
        } catch (Exception e) {
            out.println("<h3>Error: " + e.getMessage() + "</h3>");
            e.printStackTrace(out);
        }
    }
}
